<Window x:Class="AVSHull.PanelLayoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVSHull"
        mc:Ignorable="d"
        Title="Panel Layout" Height="450" Width="800">
    <Window.Resources>
        <!--<ContextMenu x:Key="EditMenu">
            <MenuItem Header="Add _All" Click="AddAllClick" />
            <MenuItem Header="Add _Panel" Click="AddPanelClick" />
        </ContextMenu>-->
    </Window.Resources>
    <Grid>
        <local:PanelLayoutControl x:Name="LayoutControl" SheetsHigh="2" SheetsWide="3" Background="White">
            <local:PanelLayoutControl.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add _All" Click="AddAllClick" />
                    <MenuItem Header="Add _Panel" Click="AddPanelClick" />
                </ContextMenu>
            </local:PanelLayoutControl.ContextMenu>
        </local:PanelLayoutControl>
    </Grid>
</Window>
