<UserControl x:Class="AVSHull.PanelLayoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVSHull"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ContextMenu x:Key="panelMenu">
            <MenuItem Header="_Horizontal Flip" Click="HorizontalFlipClick"/>
            <MenuItem Header="_Vertical Flip" Click="VerticalFlipClick"/>
            <MenuItem Header="_Replicate" Click="CopyClick"/>
            <MenuItem Header="_Delete" Click="DeleteClick"/>
            <MenuItem Header="_Split" Click="SplitClick" />
        </ContextMenu>
        <local:PanelLog x:Key="PanelUndoLog" />
        <local:PanelLog x:Key="PanelRedoLog" />
    </UserControl.Resources>

    <Grid>
            
    </Grid>
</UserControl>
