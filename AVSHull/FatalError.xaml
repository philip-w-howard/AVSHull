<Window x:Class="AVSHull.FatalError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AVSHull"
        mc:Ignorable="d"
        Title="FatalError" SizeToContent="Height" Width="300">
    <StackPanel>
        <TextBlock TextWrapping="Wrap">
            Something went wrong, and the application is terminating. If you can repeat the failure, please report the circumstances to the author: phil.w.howard@gmail.com"
        </TextBlock>
        <Label Height="20" />
        <Button Margin="20" HorizontalAlignment="Center" Click="Button_Click" IsDefault="True">OK</Button>
    </StackPanel>
</Window>
